    .wrapper
      .main
        +header()
        +content( content )
      aside.sidebar
        .sidebar__main
          nav.sidebar__menu.menu
            li.menu__item( id="menu-item_save-and-multiply" )
              a(href="#") Сохранить и преумножить
            li.menu__item
              a(href="#") Получить финансирование
            li.menu__item
              a(href="#") Решения для вашего бизнеса
            li.menu__item
              a(href="#") Расчетно-кассовое обслуживание
            li.menu__item
              a(href="#") Решения для вашей семьи/Консалтинг
            li.menu__item_break-line
            li.menu__item
              a(href="#") О нас
            li.menu__item
              a(href="#") Контактная информация
          ul.sidebar__buttons.buttons-list
            li.buttons-list__btn.buttons-list__btn_opened
              a(href="#") Raiffesien-Online
            li.buttons-list__btn
              a(href="#") R-Dealer
        footer.sidebar__footer
          .sidebar__footer-link.btn-download
            a(href="#") Скачать &laquo;Услуги FWR&raquo;
